mjml
    //- Head
    mj-head
        mj-title JPO du 23 novembre 2024 Ecosup
        mj-font(name='Roboto' href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;700;900&display=swap')
        mj-attributes
            mj-all(font-family='Roboto, Arial, Helvetica,sans serif')/
            mj-class(name='T+2' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='30px' line-height='34px' font-weight='700')/
            mj-class(name='T+1' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='16px' line-height='20px' font-weight='700')/
            mj-class(name='T' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='16px' line-height='20px' font-weight="400")/
            mj-class(name='T-1' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='13px' line-height='15px' font-weight="400")/
            mj-class(name='T-2' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='12px' line-height='16px' font-weight="400")/
            //- couleurs modifiables
            mj-class(name="cT+1" color="#14141f")/
            mj-class(name="cT+0" color="#626262")/
            mj-class(name="c-0" color="#787fbd")/
            mj-class(name="bg-0" background-color="#787fbd")/
            mj-class(name="c+1" color="#1f3c90")/
            mj-class(name="bg+1" background-color="#1f3c90")/
        mj-breakpoint(width="500px")
        mj-style.
            .c11{
                color: #1f3c90 !important;
            }
            .cT00{
                color: #626262 !important;
            }

            @media(max-width:500px){
                .m-footer div{
                    text-align: center !important;
                    width: 100% !important;
                }
                .m-footer1 {
                    text-align: center !important;
                    width: 100% !important;
                    padding-top:10px !important;
                }
            }
    //- Body
    mj-body(background-color='#efefef')
        //- content
        block content
        //- bloc header Tourisme
        block headTourisme
            include ../includes/tourisme/_headTourisme
        //- bloc article Tourisme
        block artTourisme
            include ../includes/tourisme/_artTourisme
        //- bloc button
        block button
            include ../includes/_button
        //- bloc signature Clement
        block signClement
            include ../includes/tourisme/_signClement
        //- bloc partenaires tourisme
        block partTourisme
            include ../includes/tourisme/_partTourisme
        //- bloc syrendre
        block transport
            include ../includes/_transport
        //- bloc footer
        block footer
            include ../includes/_footer 
        //- bloc reglement
        block reglement
            include ../includes/_legislation