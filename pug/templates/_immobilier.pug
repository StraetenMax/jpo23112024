mjml
    //- Head
    mj-head
        mj-title JPO du 23 novembre 2024 Ecosup
        mj-font(name='Roboto' href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;700;900&display=swap')
        mj-raw.
            <meta name='color-scheme' content='light'/>
            <meta name='supported-color-schemes' content='light'/>
            <meta name="format-detection" content="telephone=no"/>
            <meta name="format-detection" content="date=no"/>
            <meta name="format-detection" content="address=no"/>
            <meta name="format-detection" content="email=no"/>
        mj-attributes
            mj-all(font-family='Roboto, Arial, Helvetica,sans serif')/
            mj-class(name='T+2' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='30px' line-height='34px' font-weight='700')/
            mj-class(name='T+1' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='16px' line-height='20px' font-weight='700')/
            mj-class(name='T' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='16px' line-height='20px' font-weight="400")/
            mj-class(name='T-1' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='13px' line-height='15px' font-weight="400")/
            mj-class(name='T-2' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='12px' line-height='16px' font-weight="400")/
            //- couleurs modifiables
            mj-class(name="cT+1" color="#14141f")/
            mj-class(name="cT+0" color="#626262")/
            mj-class(name="c-0" color="#f6a86e")/
            mj-class(name="bg-0" background-color="#f6a86e")/
            mj-class(name="c+1" color="#ec6608")/
            mj-class(name="bg+1" background-color="#ec6608")/
        mj-breakpoint(width="500px")
        mj-style.
            .c11{
                color: #ec6608 !important;
            }
            .cT00{
                color: #626262 !important;
            }

            @media(max-width:500px){
                .m-footer div{
                    text-align: center !important;
                    width: 100% !important;
                }
                .m-footer1 {
                    text-align: center !important;
                    width: 100% !important;
                    padding-top:10px !important;
                }
            }
    //- Body
    mj-body(background-color='#efefef')
        //- content
        block content
        //- bloc header Commerce
        block headImmo
            include ../includes/immobilier/_headImmo
        //- bloc article Commmerce
        block artImmo
            include ../includes/immobilier/_artImmo
        //- bloc button
        block button
            include ../includes/_button
        //- bloc signature Marie Laurence
        block signMLaurence
            include ../includes/commerce/_signMLaurence
        //- bloc partenaires Commerce
        block partImmo
            include ../includes/immobilier/_partImmo
        //- bloc syrendre
        block transport
            include ../includes/_transport
        //- bloc footer
        block footer
            include ../includes/_footer 
        //- bloc reglement
        block reglement
            include ../includes/_legislation