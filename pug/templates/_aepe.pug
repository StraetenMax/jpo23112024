mjml
    //- Head
    mj-head
        mj-title JPO du 23 novembre 2024 Ecosup
        mj-font(name='Roboto' href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;700;900&display=swap')
        mj-attributes
            mj-all(font-family='Roboto, Arial, Helvetica,sans serif' font-weight='400')/
            mj-class(name='T+2' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='30px' line-height='34px' font-weight='700')/
            mj-class(name='T+1' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='16px' line-height='20px' font-weight='700')/
            mj-class(name='d-date' font-size='20px' line-height='24px' font-weight='700')/
            mj-class(name='T' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='16px' font-weight="400" line-height='20px' color='#14141f')/
            mj-class(name='T-1' font-size='13px' line-height='15px' color='#FFFFFF')/
            mj-class(name='T-2' align='center' font-size='12px' line-height='16px' color='#626262')/
            //- couleurs modifiables
            mj-class(name="c-T" color="#626262")/
            mj-class(name="c-0" color="#1372b8")
            mj-class(name="bg-0" background-color="#1372b8")
            mj-class(name="c+1" color="#0c4873")/
            mj-class(name="bg+1" background-color="#0c4873")/

        mj-breakpoint(width="500px")
        mj-style.
            .c-F{
                color: #0c4873;
            }

            @media(max-width:500px){
                .m-footer div{
                    text-align: center !important;
                    width: 100% !important;
                }
                .m-footer1 {
                    text-align: center !important;
                    width: 100% !important;
                    padding-top:10px !important;
                }
            }
    //- Body
    mj-body(background-color='#efefef')
        //- content
        block content
        //- bloc signature
        block signature
            include ../includes/_signature
        //- bloc partenaires
        block partenaires
            include ../includes/_partenaires
        //- bloc syrendre
        block syrendre
            include ../includes/_transport
        //- bloc footer
        block footer
            include ../includes/_footer 
        //- bloc reglement
        block reglement
            include ../includes/_legislation